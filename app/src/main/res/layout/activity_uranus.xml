<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars_wallpaper3"
    android:orientation="vertical"
    android:onClick="showDialogStarsOnClick"
    tools:context=".Planets.Uranus">


    <ImageView
        android:id="@+id/uranus_button"
        android:layout_width="389dp"
        android:layout_height="377dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:src="@drawable/uranus2" />

    <ImageView
        android:id="@+id/titania_button"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:src="@drawable/titania" />

    <FrameLayout
        android:id="@+id/uranus_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>